@if(Exibir)
{
    <div class="modal fade" id="MsgModal" tabindex="-1" role="dialog" aria-labelledby="MsgModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="MsgModalLabel">@Titulo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Mensagem
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Não</button>
                    <button type="button" class="btn btn-success" @onclick="@OnYesClick">Sim</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]public bool Exibir { get; set; }
    [Parameter]public string? Titulo { get; set; }
    [Parameter]public RenderFragment? Mensagem { get; set; }
    [Parameter]public EventCallback OnYesClick { get; set; }

    public void Exibe()
    {
        Exibir = true;
    }

    public void Oculta()
    {
        Exibir = false;
    }
}
