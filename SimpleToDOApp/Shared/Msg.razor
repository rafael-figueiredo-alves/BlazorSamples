@if(Exibir)
{
<div class="modal-backdrop show"></div>

    <div class="modal" tabindex="-1" role="dialog"
         aria-hidden="true" style="display:block;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Titulo</h5>
                    <button @onclick="Oculta" type="button" class="close"
                            data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @ChildContent
                </div>
                <div class="modal-footer">
                    <button @onclick="Oculta" type="button" class="btn btn-danger"
                            data-dismiss="modal">
                        Não
                    </button>
                    <button @onclick="OnYesClick" type="button"
                            class="btn btn-success">
                        Sim
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool Exibir { get; set; } = false;
    [Parameter]public string? Titulo { get; set; }
    [Parameter]public RenderFragment? ChildContent { get; set; }
    [Parameter]public EventCallback OnYesClick { get; set; }

    public void Exibe()
    {
        Exibir = true;
    }

    public void Oculta()
    {
        Exibir = false;
    }
}
