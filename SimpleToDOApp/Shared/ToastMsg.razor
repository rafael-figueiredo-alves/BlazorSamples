<div class="toast @Exibir" role="alert" aria-live="assertive" aria-atomic="true" style="position: absolute; bottom: 0; right: 0; z-index: 9999; float: right">
    <div class="toast-header">
        <strong class="mr-auto">Bootstrap</strong>
        <small class="text-muted">11 mins ago</small>
        <div class="d-flex justify-content-end">
        <button type="button" class="ml-2 mb-1 close" @onclick="Fechar" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        </div>
    </div>
    <div class="toast-body">
        Hello, world! This is a toast message.
    </div>
</div>

@code {
    public string Exibir = "show";
    public void Fechar()
    {
        Exibir = "hide";
    }

}
