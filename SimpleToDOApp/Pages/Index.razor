@page "/"
@inject ITarefas MyTasks

<PageTitle>Simple To-DO App | Home</PageTitle>

<h2>Estas são as minhas Tarefas</h2>
<hr />

@if(Lista == null)
{
    <p>Carregando tarefas...</p>
}
else
if(!Lista.Any())
{
    <p>Sem tarefas</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tarefa</th>
                <th scope="col" class="d-none d-md-table-cell">Descrição</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
        @foreach(Tarefa item in Lista)
        {
                <tr>
                    <th scope="col" class="col-1 align-middle"><input class="form-check-input" type="checkbox" @bind="item.feito" id="flexCheckDefault" @onclick="@(() => SetarTarefa(item.id, !item.feito))"></th>
                    <td class="col-3 align-middle">@item.tarefa</td>
                    <td class="d-none d-md-table-cell col-6 align-middle">@item.descricao</td>
                    <td class="col-2">
                        <div class="d-inline align-content-end">
                            <a class="btn btn-primary" href="edittask/@item.id"><span class="oi oi-pencil" /></a>
                            <a class="btn btn-danger" @onclick="@(()=> RemoveTarefa(item.id))"><span class="oi oi-trash" /></a>
                        </div>
                    </td>
                </tr>
        }
        </tbody>
    </table>
}

<Msg Titulo="Excluir tarefa?" @ref="msg" OnYesClick="ApagarTask">
    <p>Deseja realmente apagar a tarefa selecionada?</p>
</Msg>

@code{
    public List<Tarefa>? Lista { get; set; }

    private Msg? msg;

    private Guid id;

    protected override async void OnInitialized()
    {
        Lista = await MyTasks.GetTarefas();
        StateHasChanged();
    }

    protected void RemoveTarefa(Guid _id)
    {
        id = _id;
        msg!.Exibe();
    }

    protected void ApagarTask()
    {
        MyTasks.RemoveTarefa(id);
        msg!.Oculta();
    }

    protected void SetarTarefa(Guid id, bool feito)
    {
        MyTasks.SetTaskDone(id, feito);
    }
}

