@page "/sobre"
@inject NavigationManager nav

<PageTitle>Simple To-DO App | Sobre</PageTitle>

<h1>Sobre</h1>

<div class="card">
    <img class="card-img-top" src="images/Sobre_banner.png" alt="Imagem de capa do card">
    <div class="card-body">
        <h5 class="card-title"><strong>Simple To-DO App</strong></h5>
        <p class="card-text">Versão 1.0 - Desenvolvido por <a href="https://github.com/rafael-figueiredo-alves" target="_blank">Rafael de Figueiredo Alves</a></p>
        <p class="card-text">Este app foi desenvolvido para executar testes e aprender mais sobre o uso do Blazor e do C#.</p>
        <br />
        <p class="card-text">© Cópia autorizada @(Ano).</p>
        <p class="text-end"><button class="btn btn-primary" @onclick="Voltar">Voltar</button></p>
    </div>
</div>

@code{
    protected int Ano = DateTime.Now.Year;

    protected void Voltar()
    {
        nav.NavigateTo("/", false);
    }
}
