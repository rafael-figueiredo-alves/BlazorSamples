@page "/profile"
@inherits ProfileBase
@attribute [Authorize]

<PageTitle>BlazorClientes - Perfil</PageTitle>

<EditForm Model="@_UserProfile" OnValidSubmit="@OnValidSubmit" class="@Theme!.ColorClass" data-bs-theme="@Theme!.DataBsTheme">
<DataAnnotationsValidator />

<div style="height: 100vh;color: @Theme!.ColorFontStyle">
    <div class="container rounded bg-white  @Theme!.ColorClass" data-bs-theme="@Theme!.DataBsTheme">
        <div class="row">
            <div class="col-md-3 @Theme!.ColorClass">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-2 @Theme!.ColorClass" data-bs-theme="@Theme!.DataBsTheme" width="150px" height="150px" src="https://th.bing.com/th/id/R.6ae74c5f86466ef4f6fc6253c767381a?rik=5DSgIRvIaK7UPw&riu=http%3a%2f%2fwww.pngall.com%2fwp-content%2fuploads%2f5%2fProfile-Avatar-PNG.png&ehk=GVMh4KTpyOBERsOt5H%2b8TcGp%2bS8DdbR6niBs54kRaYA%3d&risl=&pid=ImgRaw&r=0">
                        <span class="font-weight-bold">@_UserProfile!.Nome</span>
                        @if (Theme!.IsDark)
                        {
                            <span class="text-white-50">@_UserProfile!.Email</span>
                        }
                        else
                        {
                            <span class="text-black-50">@_UserProfile!.Email</span>
                        }<span> </span>
                </div>
                <div class="container-fluid mt-5 text-center d-none d-sm-inline-flex justify-content-center"><button class="btn btn-primary profile-button" type="submit">Salvar Perfil</button></div>
            </div>
            <div class="col-md-5 @Theme!.ColorClass">
                <div class="p-3 py-1">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Informações de Perfil</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Primeiro Nome</label>
                            <input type="text" class="form-control" placeholder="Primeiro Nome" @bind-value="@_UserProfile.PrimeiroNome">
                            <ValidationMessage For="@(() => _UserProfile.PrimeiroNome)" />
                        </div>
                        <div class="col-md-6"><label class="labels">Último Nome</label>
                            <input type="text" class="form-control" @bind-value="@_UserProfile.UltimoNome" placeholder="Último Nome">
                            <ValidationMessage For="@(() => _UserProfile.UltimoNome)" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Celular</label>
                            <input type="text" class="form-control" placeholder="Celular (Ex.: (11) 99999-9999" @bind-value="@_UserProfile.Celular">
                            <ValidationMessage For="@(() => _UserProfile.Celular)" />
                        </div>
                        <div class="col-md-12"><label class="labels">Endereço</label>
                            <input type="text" class="form-control" placeholder="Endereço" @bind-value="@_UserProfile.Endereco">
                            <ValidationMessage For="@(() => _UserProfile.Endereco)" />
                        </div>
                        <div class="col-md-12"><label class="labels">Complemento</label>
                            <input type="text" class="form-control" placeholder="Complemento" @bind-value="@_UserProfile.Complemento">
                            <ValidationMessage For="@(() => _UserProfile.Complemento)" />
                        </div>
                        <div class="col-md-12"><label class="labels">CEP</label>
                            <input type="text" class="form-control" placeholder="CEP" @bind-value="@_UserProfile.CEP">
                            <ValidationMessage For="@(() => _UserProfile.CEP)" />
                        </div>
                        <div class="col-md-12"><label class="labels">Bairro</label>
                            <input type="text" class="form-control" placeholder="Bairro" @bind-value="@_UserProfile.Bairro" />
                            <ValidationMessage For="@(() => _UserProfile.Bairro)" />
                        </div>
                        <div class="col-md-12"><label class="labels">Cidade</label>
                            <input type="text" class="form-control" placeholder="Cidade" @bind-value="@_UserProfile.Cidade">
                            <ValidationMessage For="@(() => _UserProfile.Cidade)" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"><label class="labels">País</label>
                            <input type="text" class="form-control" placeholder="País" @bind-value="@_UserProfile.Pais">
                            <ValidationMessage For="@(() => _UserProfile.Pais)" />
                        </div>
                        <div class="col-md-6"><label class="labels">Estado</label>
                            <input type="text" class="form-control" @bind-value="@_UserProfile.Estado" placeholder="Estado">
                            <ValidationMessage For="@(() => _UserProfile.Estado)" />
                        </div>
                    </div>
                </div>
                <div class="mt-5 text-center d-sm-none"><button class="btn btn-primary profile-button" type="submit">Salvar Perfil</button></div>
            </div>
            <div class="col-md-4 @Theme!.ColorClass" data-bs-theme="@Theme!.DataBsTheme">
            </div>
        </div>
    </div>
</div>
</EditForm>
