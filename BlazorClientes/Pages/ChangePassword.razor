@page "/changepassword"
@inherits ChangePasswordBase
@attribute [Authorize]

<PageTitle>BlazorClientes | Trocar senha</PageTitle>

<div class="d-flex align-items-center py-4 justify-content-center" style="height: 75vh;">

<div class="card" style="width: 80%; height: 80%;">
    <h5 class="card-header">Trocar Senha</h5>
    <div class="card-body">
            @if (ExibirAviso)
            {
                <Alerta TipoDeAlerta="AlertaBase.AlertType.atAviso" OnClose="FecharAviso">
                    @Mensagem
                </Alerta>
            }

            <EditForm class="mx-1 mx-md-4" Model="TrocaSenha" OnValidSubmit="OnValidate">
                <DataAnnotationsValidator /> 

                <div class="form-group mb-3 mt-3">
                    <label>Nova Senha:</label><br />
                    <div class="form-outline flex-fill mt-1">
                        <input type="password" @bind-value="TrocaSenha.NewPassword" id="form3Example4c" class="form-control" placeholder="Informe uma nova senha" required />
                        <ValidationMessage For="@(() => TrocaSenha.NewPassword)" />
                    </div>
                </div>

                <div class="form-group mb-3 mt-3">
                    <label>Confirme a Nova Senha:</label><br />
                    <div class="form-outline flex-fill mt-1">
                        <input type="password" @bind-value="TrocaSenha.ConfirmaSenha" id="form3Example4cd" class="form-control" placeholder="Confirme sua nova senha" required />
                        <ValidationMessage For="@(() => TrocaSenha.ConfirmaSenha)" />
                    </div>
                </div>

                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary">Trocar nova senha</button>
                </div>

            </EditForm>
    </div>
</div>
</div>